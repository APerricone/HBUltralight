{
    "harbour.extraIncludePaths": [
        "c:\\harbour\\include",
        "ultralight\\include\\",
        ".", ".."
    ],
    "harbour.warningLevel": 2,
    "files.associations": {
        "*.hbc": "ini",
        "*.hbp": "ini",
        "*.h": "cpp",
        "array": "cpp",
        "vector": "cpp",
        "xstring": "cpp",
